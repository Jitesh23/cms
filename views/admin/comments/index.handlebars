<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Author</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
      {{#each comments}}
    <tr>
      
      <td>{{id}}</td>
      <td>{{user.firstName}}</td>
      <td>{{datePicker date 'MMMM Do YYYY'}}</td>
      <td><form action="/admin/comments/delete/{{id}}?_method=DELETE" method="post">
      <button class="btn btn-danger">DELETE</button>
      </form></td>
    </tr>
    {{/each}}
  </tbody>
</table>